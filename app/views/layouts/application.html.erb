    </ul>
  </div><!-- /.navbar-collapse -->
  <div class="lineoooo"></div>
</nav>
<div id="container">
  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <%= content_tag :h1, yield(:title) if show_title? %>

  <%= yield %>

</div>
</body>
</html>
