    <a class="navbar-brand dark" href="/"><img src="assets/smartfridgeicon.png" height="32" width="32" /></a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li><a href="static_pages/food"><i class="fa fa-cutlery fa-fw space-icon-out"></i>Food</a></li>
      <li><a href="static_pages/recipes"><i class="fa fa-book fa-fw space-icon-out"></i>Recipes</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog fa-fw space-icon-out"></i>Settings<b class="caret"></b></a>
