<% if signed_in? %>

    <li><%= link_to current_user, id:"Signed In" do%>
          <i class="fa fa-user fa-fw space-icon-out" ></i>
          <%= current_user.name %>
      <% end %>
    </li>

    <li><%= link_to t('layouts.application.sign_out'), sign_out_path, :method => :delete%></li>
<% else %>
    <li><%= link_to t('layouts.application.sign_in'), sign_in_path, :id => 'sign_in_link'%></li>
<% end %>