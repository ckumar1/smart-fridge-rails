<li href="" class="list-group-item for-food">
  <% timeLeft = (food_item.expiration_date - Date.today).to_i %>
  <%if timeLeft > 30 %>
      <div class="badge food-badge" style="background-color: #009900"><%=food_item.expiration_date%></div>
  <%elsif timeLeft > 7 && timeLeft <= 30 %>
      <div class="badge food-badge" style="background-color: #44AA00"><%=timeLeft%> days left!</div>
  <%elsif timeLeft <= 7 && timeLeft > 3 %>
      <div class="badge food-badge" style="background-color: #ddaa00"><%=timeLeft%> days left!</div>
  <%elsif timeLeft == 0 %>
      <div class="badge food-badge" style="background-color: #990000">Expires today!</div>
  <%elsif timeLeft == 1 %>
      <div class="badge food-badge" style="background-color: #990000">1 day left!</div>
  <%else%>
      <div class="badge food-badge" style="background-color: #990000">Expired <%=-timeLeft%> days ago</div>
  <%end%>
  <b><h4 class="list-group-item-heading <%=food_item.name %>"><%= food_item.name %> </h4></b>
  <p style="margin-bottom: 0px;"><%= food_item.description %><span class="removal-button" style="float:right; display: relative;"><%= link_to "remove", food_item, method: :delete, data: { confirm: "You sure?" } %></span></p>

</li>
